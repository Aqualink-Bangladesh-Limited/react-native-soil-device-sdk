{
  "name": "react-native-soil-device-sdk",
  "version": "1.0.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "React Native SDK for USB Type-C soil sensor cable (CH34x/CH340) speaking Modbus-RTU over USB serial, with optional server reporting + offline queue.",
  "keywords": [
    "react-native",
    "usb",
    "serial",
    "modbus",
    "soil",
    "ch340",
    "ch34x",
    "iot"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/react-native-soil-device-sdk.git"
  },
  "homepage": "https://github.com/your-org/react-native-soil-device-sdk#readme",
  "bugs": {
    "url": "https://github.com/your-org/react-native-soil-device-sdk/issues"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "react-native": "src/index.ts",
  "files": [
    "android/",
    "dist/",
    "src/",
    "docs/",
    "README.md",
    "LICENSE",
    "react-native.config.js"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc -p tsconfig.json",
    "prepack": "npm run build",
    "lint": "echo \"(optional)\""
  },
  "peerDependencies": {
    "react": ">=18",
    "react-native": ">=0.72",
    "@react-native-async-storage/async-storage": ">=2",
    "@react-native-community/netinfo": ">=11"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "typescript": "^5.5.0"
  }
}
